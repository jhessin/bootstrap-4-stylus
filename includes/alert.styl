alert(--type = null, --close = '.close', --link = '.link')
  padding 0.75rem 1.25rem
  margin-bottom 1rem
  border 1px solid transparent
  border-radius 0.25rem
  {--link}
    font-weight --font-weight-bold
  {--close}
    position relative
    top -0.75rem
    right -1.25rem
    padding 0.75rem 1.25rem
    color inherit
  if --type is 'heading'
    color inherit

  // Not sure why these don't use the variable colors.
  if 'primary' is --type
    color #004085
    background-color #cce5ff
    border-color #b8daff
    hr
      border-top-color #9fcdff
    {--link}
      color #002752
  if --type is 'secondary'
    color #464a4e
    background-color #e7e8ea
    border-color #dddfe2
    hr
      border-top-color #cfd2d6
    {--link}
      color #2e3133
  if --type is 'success'
    color #155724
    background-color #d4edda
    border-color #c3e6cb
    hr
      border-top-color #b1dfbb
    {--link}
      color #0b2e13
  if --type is 'info'
    color #0c5460
    background-color #d1ecf1
    border-color #bee5eb
    hr
      border-top-color #abdde5
    {--link}
      color #062c33
  if --type is 'warning'
    color #856404
    background-color #fff3cd
    border-color #ffeeba
    hr
      border-top-color #ffe8a1
    {--link}
      color #533f03
  if --type is 'danger'
    color #721c24
    background-color #f8d7da
    border-color #f5c6cb
    hr
      border-top-color #f1b0b7
    {--link}
      color #491217
  if --type is 'light'
    color #818182
    background-color #fefefe
    border-color #fdfdfe
    hr
      border-top-color #ececf6
    {--link}
      color #686868
  if --type is 'dark'
    color #1b1e21
    background-color #d6d8d9
    border-color #c6c8ca
    hr
      border-top-color #b9bbbe
    {--link}
      color #040505
