alert()
  // PARSE ARGUMENTS
  $flags = getFlags(arguments)
  // get the name of this class
  $this = getThis()
  // get the colors for this alert
  $colors = getColorSet(arguments)

  // set default classes
  $closeClass := getHash(arguments, 'closeClass', 'close')
  $showClass := getHash(arguments, 'showClass', 'show')
  // END ARGUMENT PARSE
  // DEBUGGING
  if $DEBUGGING is defined
    p($flags)

  padding 0.75rem 1.25rem
  margin-bottom 1rem
  border 1px solid transparent
  border-radius 0.25rem
  [href]
    font-weight $font-weight-bold
  &.{$closeClass}
    position relative
    top -0.75rem
    right -1.25rem
    padding 0.75rem 1.25rem
    color inherit

  // fade by default
  opacity: 0
  transition: opacity 0.15s linear
  &.{$showClass}
    opacity: 1

  // Not sure why these don't use the variable colors.
  if 'primary' in $flags
    color #004085
    background-color #cce5ff
    border-color #b8daff
    hr
      border-top-color #9fcdff
    [href]
      color #002752
  else if 'secondary' in $flags
    color #464a4e
    background-color #e7e8ea
    border-color #dddfe2
    hr
      border-top-color #cfd2d6
    [href]
      color #2e3133
  else if 'success' in $flags
    color #155724
    background-color #d4edda
    border-color #c3e6cb
    hr
      border-top-color #b1dfbb
    [href]
      color #0b2e13
  else if 'info' in $flags
    color #0c5460
    background-color #d1ecf1
    border-color #bee5eb
    hr
      border-top-color #abdde5
    [href]
      color #062c33
  else if 'warning' in $flags
    color #856404
    background-color #fff3cd
    border-color #ffeeba
    hr
      border-top-color #ffe8a1
    [href]
      color #533f03
  else if 'danger' in $flags
    color #721c24
    background-color #f8d7da
    border-color #f5c6cb
    hr
      border-top-color #f1b0b7
    [href]
      color #491217
  else if 'light' in $flags
    color #818182
    background-color #fefefe
    border-color #fdfdfe
    hr
      border-top-color #ececf6
    [href]
      color #686868
  else if 'dark' in $flags
    color #1b1e21
    background-color #d6d8d9
    border-color #c6c8ca
    hr
      border-top-color #b9bbbe
    [href]
      color #040505
  // else if $colors
  //   color: $colors.color
  //   background-color: $colors.complement
  //   border-color: $colors.hover
