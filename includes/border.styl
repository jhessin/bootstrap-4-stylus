border()
  // start building the result
  $size = $default-border-size
  $type = $default-border-type
  $color = $default-border-color
  $locations = ()

  for $arg in arguments

    if $arg in ('primary' 'secondary' 'success' 'info' 'warning' 'danger' 'light' 'dark' 'white')
      $color = parse($arg)
    else if $arg is a 'rgba'
      $color = $arg
    else if $arg in (top bottom right left)
      push($locations, $arg)
    else if $arg is a 'unit' // asume they mean size
      $size = $arg
    else if $arg
      $type = $arg
  if length($locations) > 0
    for $location in $locations
      if $size is 0
        parse($location, ': 0;', 'border-')
      else
        parse($location, ':', 'border-') parse($size) parse($type) parse($color)
  else
    if $size is 0
      border: 0
    else
      border: $size $type $color


