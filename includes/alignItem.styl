align-items(--type)
  -ms-flex-align replace('flex-', '', --type) !important
  if --type is 'start' or --type is 'end'
    align-items flex-{--type}
  else
    align-items --type !important

align-items-sm(--type)
  @media (min-width: --grid-sm)
    align-items(--type)

align-items-md(--type)
  @media (min-width: --grid-md)
    align-items(--type)

align-items-lg(--type)
  @media (min-width: --grid-lg)
    align-items(--type)

align-items-xl(--type)
  @media (min-width: --grid-xl)
    align-items(--type)
