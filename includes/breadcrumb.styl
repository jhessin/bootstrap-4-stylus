breadcrumb($itemClass = 'item', $separator = '/', $activeClass = 'active')
  padding 0.75rem 1rem
  margin-bottom 1rem
  list-style none
  background-color #e9ecef
  border-radius 0.25rem
  &::after
    display block
    clear both
    content ""

  .{$itemClass}
    float left
    & + .{$itemClass}
      &::before
        display inline-block
        padding-right 0.5rem
        padding-left 0.5rem
        color $secondary
        content $separator
      &:hover
        &::before
          text-decoration underline
          text-decoration none
    &.{$activeClass}
      color $secondary
